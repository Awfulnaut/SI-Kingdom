<div class="col-md-6">
  <div class="card todo-card" id="chores">
    <div class="card-header">
      <div class="row">
        <div class="col-12 todo-cat">
          <h2>Chores</h2>
        </div>
        <div class="bonus">
          <img src="./images/knight.png" alt="knight pixel art">
        </div>
      </div>
    </div>
    <form data-category="chores" class="task-form">
      <div class="form-group">
        <label class="sr-only" for="chores-task-input">New task</label>
        <input type="text" class="form-control task-input" id="chores-task-input" placeholder="Add a task" required>
      </div>
      <div class="task-options d-none">
        <div class="difficulty-select">
          <div class="form-check form-check-inline">
            <input class="form-check-input active" type="radio" name="chores-difficulty" id="inlineRadio1" value="1" checked="">
            <label class="form-check-label" for="inlineRadio1">Easy</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="chores-difficulty" id="inlineRadio2" value="2">
            <label class="form-check-label" for="inlineRadio2">Medium</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="chores-difficulty" id="inlineRadio3" value="3">
            <label class="form-check-label" for="inlineRadio3">Hard</label>
          </div>
        </div>
        <button class="btn btn-primary btn-add-task" id="new-chores-task" type="submit">Add Task</button>
      </div>
    </form>
    <ul class="tasks">
      {{!-- Loop through and add tasks in this category --}}
      {{#each choresTasks}}
        {{#unless completed}}
          <li data-id="{{id}}">
            <span>{{name}}</span>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
    <div class="accordion completed" id="chores-completed">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <button class="btn btn-link btn-expand ml-auto d-block" type="button" data-toggle="collapse" data-target="#collapse-chores-completed"
              aria-expanded="true" aria-controls="collapse-chores-completed">
              Completed tasks
            </button>
          </h5>
        </div>
        <div id="collapse-chores-completed" class="collapse hide" data-parent="#chores-completed">

          <ul class="tasks completed">
            {{!-- loop through and add completed tasks in this category --}}
            {{#each choresTasks}}
              {{#if completed}}
                <li data-id="{{id}}">
                  <span>{{name}}</span>
                </li>
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>