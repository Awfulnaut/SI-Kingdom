<div class="jumbotron-fluid" id="navbar">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2" id="home-body">
                <a href="/user" id="home-link">
                    <div class="home-container">
                        <img src="/images/castle-home.png" id="castle-home" />
                        <p id="usernav-text-title">Self-Improvement Kingdom</p>
                    </div>
                </a>
            </div>
            <div class="col-md-2" id="avatar">
                <h5 class="card-title">
                    <p id="castle-container">
                        <span>
                            <img src="{{data.castle}}" id="castle-img" />
                        </span>
                    </p>
                    <p id="username-container">
                        <span id="usernav-text">{{data.username}}</span> &ndash;
                        <span id="title" class="usernav-text">{{data.title}}</span>
                    </p>
                </h5>
            </div>
            <div class="col-md-4" id="user-progress">
                <h5 class="card-title" id="usernav-text">Provinces:
                    <span id="province-count" class="usernav-text">{{data.provinceCount}}</span>
                </h5>
                <div class="progress" id="progress-usernav">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 0%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            <div class="col-md-2" id="army-counts">
                {{!--
                <h5 class="card-title" id="usernav-text">Army</h5> --}}
                <div id="army">
                    <img src="./images/archer.png" id="encounter-img-archer" alt="archer-pixel"> &times;
                    <span id="user-archer-count" class="usernav-text">{{data.archerCount}}</span>
                    <span id="nbsp"></span>
                    <img src="./images/knight.png" id="encounter-img-knight" alt="knight-pixel"> &times;
                    <span id="user-knight-count" class="usernav-text">{{data.knightCount}}</span>
                    <span id="nbsp"></span>
                    <img src="./images/mage.png" id="encounter-img-mage" alt="mage-pixel"> &times;
                    <span id="user-mage-count" class="usernav-text">{{data.mageCount}}</span>
                </div>
            </div>
            <div class="col-md-2" id="menu-dropdown">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle menu-btn" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            Menu
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <a class="dropdown-item" href="#">About</a>
                            <a class="dropdown-item" id="add-friend" data-toggle="modal" data-target="#add-friend-modal">Allies</a>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="add-friend-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title" id="exampleModalLabel">Allies</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-center mx-auto" id="friend-zone">
                </div>

                <form class="request-alliance">
                    <div class="form-group">
                        <label for="username">
                            <strong>Propose an alliance?</strong>
                        </label>
                        <input type="text" placeholder="Ally's username" class="form-control" id="fri-username">
                    </div>
                    <button type="submit" class="btn btn-success d-block mx-auto" id="fri-submit">Dispatch Request</button>
                </form>
            </div>
        </div>
    </div>
</div>