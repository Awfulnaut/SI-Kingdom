    <!-- ======================================================================================== -->
    <!-- ENCOUNTER CARD -->
    <!-- ======================================================================================== -->
    <div class="row">
      <div class="col-12">
        <div class="jumbotron" id="encounter-card">
          <div class="row">
            <div class="col-md-4" id="user-army">
              <h4>Your Army</h4>
              <hr class="my-4">
              <p><img src="./images/archer.png" id="encounter-img-archer">Archers: <span id="encounter-archer-count"></span></p>
              <p><img src="./images/knight.png" id="encounter-img-knight">Knights: <span id="encounter-knight-count"></span></p>
              <p><img src="./images/mage.png" id="encounter-img-mage">Mages: <span id="encounter-mage-count"></span></p>
            </div>
            <div class="col-md-4" id="fight-flee">
              <h4>Encounter Name</h4>
              <hr class="my-4">
              <a class="btn btn-primary btn-lg" href="#" role="button" data-toggle="modal" data-target="#fightModal">Fight!</a>
              <span> OR </span>
              <a class="btn btn-primary btn-lg" href="#" role="button" data-toggle="modal" data-target="#fleeModal">Flee!</a>
              <hr class="my-4">
            </div>
            <div class="col-md-4" id="enemy">
              <h4>Enemy Army</h4>
              <hr class="my-4">
              <p><img src="./images/archer.png" id="encounter-img-archer">Archers: <span id="enemy-archer-count">20</span></p>
              <p><img src="./images/knight.png" id="encounter-img-knight">Knights: <span id="enemy-archer-count">10</span></p>
              <p><img src="./images/mage.png" id="encounter-img-mage">Mages: <span id="enemy-archer-count">5</span></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- ======================================================================================== -->
    <!-- FIGHT MODAL -->
    <!-- ======================================================================================== -->
    <div class="modal fade bd-example-modal-md" id="fightModal" role="dialog">
      <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Fight!</h4>
            <button type="button" class="close" data-dismiss="modal">x</button>
          </div>
          <div class="modal-body">
            <!-- Battle content goes here -->
            <p class="battle-simulation">Battle simulation content goes here</p>
            <p id="battle-results">You lost 10 knights, 5 archers, 1 mage</p>
          </div>
          <div class="modal-footer">
            <h5>Reward: You have gained 1 Province!</h5>
            {{!-- <button type="button" class="btn btn-lg btn-primary" data-dismiss="modal" id="close">Close</button> --}}
          </div>
        </div>
      </div>
    </div>

    <!-- ======================================================================================== -->
    <!-- FLEE MODAL -->
    <!-- ======================================================================================== -->
    <div class="modal fade bd-example-modal-md" id="fleeModal" role="dialog">
      <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Flee!</h4>
            <button type="button" class="close" data-dismiss="modal">x</button>
          </div>
          <div class="modal-body">
            <!-- Content goes here -->
            <p>Your army has retreated!</p>
            <p>You have lost 1 province for this act of cowardice.</p>
            <p>Return tomorrow &mdash; if you are ready for battle!</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-lg btn-primary" data-dismiss="modal" id="close">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- ======================================================================================== -->
    <!-- TASK CARD -->
    <!-- ======================================================================================== -->
    <div class="row">
      <div class="col-md-6">
        <div class="card todo-card" id="personal">
          <div class="card-header">
            <div class="row">
              <div class="col-6 todo-cat">
                <h2>Personal</h2>
              </div>
              <div class="col-6 cat-level">
                <h2>Level
                  <span class="level">1</span>
                </h2>
              </div>
              <div class="bonus">
                <img src="./images/archer.png" alt="archer pixel art">
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <div class="progress">
                  <div class="progress-bar bg-warning" role="progressbar" style="width: 25%;" aria-valuenow="25"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            </div>
          </div>
          <button class="btn btn-primary btn-add-task" id="new-personal-task">Add Task</button>
          <ul class="tasks">
            {{!-- Loop through and add tasks in this category --}}
            <li id="{{!-- task-{{task_id}} --}}">
              <span>Pay credit card bill</span>
            </li>
            <li id="{{!-- task-{{task_id}} --}}">
              <span>Clean out garage</span>
            </li>
            <li id="{{!-- task-{{task_id}} --}}">
              <span>Schedule oil change</span>
            </li>
          </ul>
          <div class="accordion completed" id="personal-completed">
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0">
                  <button class="btn btn-link btn-expand ml-auto d-block" type="button" data-toggle="collapse"
                    data-target="#collapse-personal-completed" aria-expanded="true" aria-controls="collapse-personal-completed">
                    Completed tasks
                  </button>
                </h5>
              </div>
              <div id="collapse-personal-completed" class="collapse hide" data-parent="#personal-completed">

                <ul class="tasks completed">
                  {{!-- loop through and add completed tasks in this category --}}
                  <li id="{{!-- task-{{task_id}} --}}">
                    <span>Deliver rent check</span>
                  </li>
                  <li id="{{!-- task-{{task_id}} --}}">
                    <span>Empty litter box</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

